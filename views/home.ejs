<%- include('header'); -%>
<style>
    * {
      box-sizing: border-box;
    }
    
    body {
      font-family: Arial, Helvetica, sans-serif;
    }
    
    /* Float four columns side by side */
    .column {
      float: left;
      width: 75%;
      padding-left: 25%;
      padding-top: 30px;
      padding-bottom: 30px;
      padding-top: 10px;

    }
    
    /* Remove extra left and right margins, due to padding */
    .row {
        margin: 0 auto;
        max-width: 100%; /* This is what keeps the items in the center */
        margin-bottom: 2%;

    
    }
    
    /* Clear floats after the columns */
    .row:after {
      content: "";
      display: table;
      clear: both;
    }
    
    /* Responsive columns */
    @media screen and (max-width: 600px) {
      .column {
        width: 100%;
        display: block;
        margin-bottom: 20px;
      }
    }
    
    /* Style the counter cards */
    .card {
      box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
      padding: 30px;
      text-align: center;
      background-color: #f1f1f1;
    }
</style>

